<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/colorAccent</item>
        <item name="android:windowBackground">@color/off_white</item>
        <item name="homeAsUpIndicator">@null</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.TextInputLayout</item>
        <item name="android:focusedByDefault">true</item>
    </style>

    <style name="TextInputStylePlain">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.TextInputLayout</item>
        <item name="android:focusedByDefault">true</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/margin16</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cornerRadius">6dp</item>
    </style>


</resources>
